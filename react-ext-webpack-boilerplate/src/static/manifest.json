{
  "manifest_version": 3,
  "name": "React Extension Webpack",
  "description": "Chrome Extension in React with Webpack",
  "version": "1.0.0",
  "icons": {
    "16": "./icon.png",
    "48": "./icon.png",
    "128": "./icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "React Extension Webpack",
    "default_icon": "./icon.png"
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["script.js"]
    }
  ]
}
